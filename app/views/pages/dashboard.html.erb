<h3>Welcome to your Dashboard, <%= current_user.nickname %> </h3>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <ul>
        <% @poems.each do |poem| %>
          <li data-poem-id="<%= poem.id %>">
            <%= poem.title %> - <%= poem.user.nickname %> : <%= link_to "Просмотреть", poem_path(poem) %> - <%= link_to "Изменить", edit_poem_path(poem) %> - <%= link_to "Удалить", poem_path(poem), method: :delete, remote: true %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

